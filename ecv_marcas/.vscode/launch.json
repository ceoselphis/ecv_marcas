    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch built-in server and debug",
            "type": "php",
            "request": "launch",
            "runtimeExecutable": "C:\\laragon\\bin\\php\\php-7.4.33\\php.exe",
            "program": "${file}",
            "runtimeArgs": [
                "-S",
                "crm.localhost",
                "-t",
                "."
            ],
            "cwd": "${workspaceRoot}",
            "port": 9003,
            "serverReadyAction": {
                "action": "openExternally"
            }
        },
        {
            "name": "Debug current script in console",
            "type": "php",
            "request": "launch",
            "program": "${file}",
            "cwd": "${fileDirname}",
            "externalConsole": false,
            "port": 9003
        },
        {
            "name": "Listen for Xdebug",
            "type": "php",
            "request": "launch",
            "port": 9003,
            "hostname": "127.0.0.1",
            //"log": true,
            "runtimeArgs": [
                "crm.localhost:80"
            ]
        }
    ]
}